 <div class="table-responsive">
  <form method="post" action="/products/add">
    <table class="table table-condensed">
      <tbody>      
       <tr>
         <th>Product Name: </th>
         <td><input type="text" name="pname" required 
              placeholder="Enter Product Name"></td>
       </tr>
        <tr>
         <th>Product Description: </th>
         <td><input type="text" name="pdesc" required 
              placeholder="Enter Product Description"></td>
       </tr>
       <tr>
         <th>Quantity: </th>
         <td><input type="text" name="quantity" required 
              placeholder="Enter Quantity"></td>
       </tr>
        <tr>
         <th>Price: </th>
         <td><input type="text" name="price" required 
              placeholder="Enter Price"></td>
       </tr> 
       </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
           <input type="submit" value="Save" 
              class="btn btn-success">
           <input type="button" value="Cancel" 
              class="btn btn-danger" onclick="cancelAdd()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
