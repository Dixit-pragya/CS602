<div>
	<div class="table-responsive">
		<table class="table table-condensed">
			{{#if data}}
			<thead>
				<tr>
					<th>Product</th>
					<th>Product Description</th>
					<th>Quantity</th>
					<th>Price</th>
					<th></th>
				</tr>
			</thead>
			{{else}}
			<tr><td colspan="3">No Products found ... Add One!</td></tr>
			{{/if}}
			<tbody>
				{{#each data}}
					<tr>
						<td>{{this.productName}}</td>
						<td>{{this.productDesc}}</td>
						<td>{{this.quantity}}</td>
						<td>{{this.price}}</td>
						</td>
						<td>
							<a href="/products/edit/{{this.id}}">Edit</a> | 
							<a href="/products/delete/{{this.id}}">Delete</a>
						</td>
					</tr>
				{{/each}}
			</tbody>
			<tfooter>
				<tr><td>
				<button class="btn btn-primary" 
						onClick="addProduct();">Add</button>
				</td></tr>
			</tfooter>
		</table>
	</div>
</div>
