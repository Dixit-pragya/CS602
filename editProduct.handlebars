<div class="table-responsive">
  <form method="post" action='/products/edit'>
    <table class="table table-condensed">
      <tbody>
        <tr>
          <th>Product Name: </td>
          <td><input type="text" name="pname" required size="40" 
                  value="{{data.productName}}"></td>
        </tr>
        <tr>
          <th>Product Desc: </td>
          <td><input type="text" name="pdesc" required size="40" 
                  value="{{data.productDesc}}"></td>
        </tr>
        <tr>
          <th>Quantity: </td>
          <td><input type="text" name="quantity" required size="40" 
                  value="{{data.quantity}}"></td>
        </tr>
        <tr>
          <th>Price: </td>
          <td><input type="text" name="price" required size="40" 
                  value="{{data.price}}"></td>
        </tr>
        <input type="hidden" name="id" value="{{data.id}}">
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
              <input type="submit" value="Save" class="btn btn-success">
              <input type="button" value="Cancel" class="btn btn-danger"
                  class="cancel" onclick="cancelAdd()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
